<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista rezerwacji</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Klient</th>
                    <th>Samochód</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
            <% for (let reservation of reservations) { %>
                <tr>
                    <td><%=reservation.client.firstName + ' ' + reservation.client.lastName%></td>
                    <td><%=reservation.car.brandName + ' ' + reservation.car.model%></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/reservation/details/<%=reservation._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/reservation/edit/<%=reservation._id%>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/reservation/delete/<%=reservation._id%>" class="list-actions-button-delete" onclick="return confirm('Czy na pewno chcesz usunąć tę rezerwację?');">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <p><a href="/reservation/add" class="button-add">Dodaj nowa rezerwacje</a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>